<%= render 'layerbegin' %>
<div class="page-content">
  <div class="page-header">
    <h1>
      用户
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">昵称</th>
                <th class="text-center">openid</th>
                <th class="text-center"></th>
                <th class="text-center">手机</th>
                <th class="text-center">性别</th>
                <th class="text-center">状态</th>
                <th class="text-center">附属用户</th>
                <th class="text-center">关联设备</th>




              </tr>
              </thead>

              <tbody>
              <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= user.nickname %>
                    </td>
                    <td>
                      <%= user.openid %>
                    </td>
                    <td class="text-center">
                      <img src=<%= user.headurl %> width='40'>
                    </td>
                    <td>
                      <%= user.phone %>
                    </td>
                    <td>
                      <% if user.sex == 1%>
                          男
                      <% elsif user.sex ==2 %>
                          女
                      <% end %>
                    </td>
                    <td>

                      <% if user.status == 1%>
                      <span class="text-success">
                        正常
                      </span>
                      <% else %>
                      <span class="text-danger">
                        停用
                      </span>
                      <% end %>

                    </td>
                    <td>
                      <%= link_to user.childrens.count,attchuser_user_path(user),class:'btn btn-primary btn-xs' %>
                    </td>
                    <td>
                      <%= link_to user.devices.count,attchdevice_user_path(user),class:'btn btn-primary btn-xs' %>
                    </td>
                  </tr>
              <% end %>








              </tbody>
            </table>
          </div><!-- /.table-responsive -->
        </div><!-- /span -->
      </div><!-- /row -->

      <div data-turbolinks="false" class="text-center">
        <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
      </div>




    </div><!-- /.col -->
  </div><!-- /.row -->
</div><!-- /.page-content -->



<% render 'layerend' %>