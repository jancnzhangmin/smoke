<%= render 'layerbegin' %>

<div class="page-content">
  <div class="page-header">
    <h1>
      <%= @admin.username %>的权限
    </h1>
  </div><!-- /.page-header -->

  <script>
      $(document).ready(function(){
          $(".chosen-select").chosen();

          $(".chosen-select").val(<%= @adminroleids %>);
          $('.chosen-select').trigger('chosen:updated');
          $('#commit').click(function(){
              $('#auth').val($(".chosen-select").val());
          });
      });
  </script>




  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->


        <%= form_tag(controller: "admins", action: "setauth") do %>
        <div class="form-group">
          <label class="control-label col-xs-12 col-sm-3 no-padding-right"> 权限组 </label>
          <div class="col-xs-12 col-sm-9">
            <div class="clearfix">
              <div class="space-2"></div>
              <select multiple="" class="width-80 chosen-select col-xs-12 col-sm-5 tag-input-style"   id="form-field-select-4" data-placeholder="请选择角色">
                <option value="">&nbsp;</option>
                <% @roles.each do |role| %>
                    <option value=<%= role.id %>><%= role.name %></option>
                <% end %>
              </select>
              <%= hidden_field_tag :auth,params[:auth],id:'auth' %>
            </div>
          </div>
        </div>
        <div class="clearfix form-actions">
          <div class="col-md-offset-3 col-md-9">
            <button type="submit" id="commit" value="保存" class="btn btn-info" data-disable-with="保存">
              <i class="icon-ok bigger-110"></i>
              保存
            </button>
          </div>
        </div>
      <% end %>


    </div><!-- /.col -->
  </div><!-- /.row -->

</div>

<%= render 'layerend' %>