<%= render 'layerbegin' %>


<style>
    .btn-transparent {
        background-color: transparent !important;
        border-color: transparent;
        color:#6fb3e0;
    }
</style>



<div class="page-content">
  <div class="page-header">
    <h1>
      短信设置
    </h1>
  </div><!-- /.page-header -->

  <div class="row">
    <div class="col-xs-12">
      <!-- PAGE CONTENT BEGINS -->

      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th class="text-center">短信平台</th>
                <th class="text-center">关键字</th>
                <th class="text-center">默认启用</th>
                <th class="text-center">操作</th>
              </tr>
              </thead>

              <tbody>
              <% @messages.each do |message| %>
                  <tr>
                    <td>
                      <%= message.name %>
                    </td>
                    <td>
                      <%= message.keyword %>
                    </td>
                    <td>
                      <% if message.isdefault == 1 %>
                      <span class="badge badge-info"><i class="fa fa-check"></i></span>
                          <% end %>
                    </td>
                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group" data-turbolinks="false">
                        <a class="btn btn-xs btn-warning" href=<%= edit_message_path(message) %>>
                          <i class="icon-edit bigger-120"></i>
                          编辑
                        </a>
                      </div>

                    </td>
                  </tr>
              <% end %>








              </tbody>
            </table>
          </div><!-- /.table-responsive -->



        </div><!-- /span -->
      </div><!-- /row -->





    </div><!-- /.col -->
  </div><!-- /.row -->
</div><!-- /.page-content -->



<% render 'layerend' %>